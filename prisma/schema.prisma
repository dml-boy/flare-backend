generator client {
  provider = "prisma-client-js"
}
  // output   = "../generated/prisma"

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
}  

model User {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AboutIntro {
  id          String      @id @map("_id") @default(auto()) @db.ObjectId
  subtitle    String
  title       String
  description String
  photoUrl    String?
  steps       AboutStep[]
}

model AboutStep {
  id          String      @id @map("_id") @default(auto()) @db.ObjectId
  title       String
  description String
  order       Int
  aboutIntro  AboutIntro  @relation(fields: [aboutIntroId], references: [id])
  aboutIntroId String     @db.ObjectId
}

model Service {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  title       String
  description String
  iconClass   String
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([order])
}

model Portfolio {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  title       String
  category    String
  thumbUrl    String
  thumb2xUrl  String?
  fullUrl     String
  fullSize    String
  projectUrl  String?
  description String
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([order])
}

model Client {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  name      String
  logoUrl   String
  linkUrl   String?
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([order])
}

model Testimonial {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  content     String
  authorName  String
  authorTitle String
  authorImage String
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([order])
}

model ContactInfo {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  email     String   @unique
  phone     String
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SocialLink {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  platform  String
  url       String
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([order])
}
